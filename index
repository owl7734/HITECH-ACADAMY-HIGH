        // Modified accessClasses function
        function accessClasses() {
            const grade = prompt("Enter your grade level (7-12):");
            if (grade < 7 || grade > 12) {
                alert("Invalid grade level! Please enter a number between 7 and 12.");
                return;
            }
            
            const studentID = prompt("Enter your student ID:");
            if (studentDatabase[studentID]) {
                showReportCard(studentID);
            } else {
                alert("Invalid Student ID! Access Denied.");
            }
        }

        // New function to show report card
        function showReportCard(studentID) {
